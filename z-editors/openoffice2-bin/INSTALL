INSTALLDIR=$INSTALL_ROOT/opt/openoffice             &&
mkdir -pv $INSTALLDIR/                           &&
cd  $BUILD_DIRECTORY/openoffice2/SRC680_m122_native_packed-2_en-US.8941/RPMS &&
cp -Rv opt/openoffice.org1.9.122/* $INSTALLDIR         &&
cp -Rv usr/share/icons/* $INSTALL_ROOT/usr/share/icons   &&

# create bin links for executables.
for LINK in "sbase" "scalc" "sdraw" "simpress" "smath" "soffice" "swriter" "spadmin"; do  
  message "${MESSAGE_COLOR}Creating link for $LINK ${DEFAUL_COLOR}"
  rm -f /usr/bin/$LINK
  ln -s /opt/openoffice/program/$LINK /usr/bin/$LINK
done
