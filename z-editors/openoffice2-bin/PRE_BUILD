mk_source_dir  $SOURCE_DIRECTORY  &&
cd $SOURCE_DIRECTORY  &&
unpack_file  ''  &&
cd RPMS            &&

for PART in core01 core02 core03 core04 core05 core06 core07 core08 core09 core10 calc draw impress math writer graphicfilter pyuno spellcheck testtool xsltfilter core03u core04u core05u javafilter gnome-integration; do  
  message "${MESSAGE_COLOR}Extracting $PART ${DEFAULT_COLOR}"
  rpmunpack openofficeorg-$PART-1.9.118-1.i586.rpm
  gzip -d   openofficeorg-$PART-1.9.118-1.cpio.gz
  cpio -idm < openofficeorg-$PART-1.9.118-1.cpio
done

