           SPELL=winetools-bin
 if [[ "${WINETOOLS_VERSION}" == "0.9" ]] ; then
         VERSION=0.9jo-III
     SOURCE_HASH=sha512:3f5cbe31293f2d08849c5249be08866fdfa745469b17b527f46ae417ce9e80f1aab5f4da500cab33909cb9c955b14b208f5d72ff7d79409c5978a1ab4568cdac

