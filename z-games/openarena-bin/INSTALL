INSTALL_DIR=${INSTALL_ROOT}/opt/openarena  &&
mkdir $INSTALL_DIR  &&
cp -v ${SPELL_DIRECTORY}/openarena ${INSTALL_ROOT}/usr/games  &&
cp -v ${SPELL_DIRECTORY}/oa_ded ${INSTALL_ROOT}/usr/games  &&
cp -rv * $INSTALL_DIR  &&
cd $INSTALL_DIR  &&
find_and_scam  &&
chmod 750 {oa_ded,openarena}.{i386,x86_64}
