mkdir  -p  ${INSTALL_ROOT}/usr/share/games/simutrans          &&
cp -f -r /usr/src/simutrans/* ${INSTALL_ROOT}/usr/share/games/simutrans &&
chmod -fR a+r ${INSTALL_ROOT}/usr/share/games/simutrans/*  &&
mkdir  -p  ${INSTALL_ROOT}/usr/games  &&
install $SCRIPT_DIRECTORY/simutrans /usr/games &&
install $SCRIPT_DIRECTORY/desktop/* /usr/share/applications/
