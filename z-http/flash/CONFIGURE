# Standard rejected warnings.
#
source $SCRIPT_DIRECTORY/../../REJECTED_MSG

echo "Flash works with the following programs:"
echo "Mozilla"
echo "firefox"
echo "Konqueror"
echo "Opera"
echo "Netscape (not version 4.x)"

echo "Select which currently installed applications you wish to install Flash for."

persistent_add MOZILLA FIREFOX KDEBASE OPERA NETSCAPE

if spell_installed mozilla
then
  if query "Do you wish to install the plugin for Mozilla?" y
  then
    MOZILLA=y
  else
    MOZILLA=n
	fi
fi

if spell_installed firefox
then
  if query "Do you wish to install the plugin for firefox?" y
  then 
    FIREFOX=y
  else
    FIREFOX=n
	fi
fi

if spell_installed kdebase
then
  if query "Do you wish to install the plugin for Konqueror?" y
  then
    KDEBASE=y
  else
    KDEBASE=n
  fi
fi

if spell_installed opera
then
  if query "Do you wish to install the plugin for Opera?" y
  then
    OPERA=y
  else
    OPERA=n
  fi
fi

if spell_installed netscape4
then
  if query "Do you wish to install the plugin for Netscape?" y
  then
    NETSCAPE=y
  else
    NETSCAPE=n
	fi
fi
