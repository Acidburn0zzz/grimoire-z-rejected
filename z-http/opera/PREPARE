persistent_load &&
if [[ ${SMGL_COMPAT_ARCHS[1]} == "x86_64"
   || ${SMGL_COMPAT_ARCHS[1]} == "ia32" ]]; then
  if [[ ${OPERA_RELEASE:0:1} == "8"
     || ${OPERA_RELEASE:0:1} == "9" ]]; then
    persistent_remove OPERA_RELEASE
  fi
  config_query_list OPERA_RELEASE "Which release would you like to cast?" "10 qt4, shared" "10 qt4, bundled" "10 qt3, shared"
else
  message "${PROBLEM_COLOR}Opera is not available for platform ${SMGL_COMPAT_ARCHS[1]}${DEFAUL_COLOR}"
  false
fi
