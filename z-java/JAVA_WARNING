# Special messages with regards to Java sources.
#
message "\n${MESSAGE_COLOR}" \
        "For ${SPELL} you have to agree to the DLJ license.\n\n" \
        "Available at http://dlc.sun.com/dlj/DLJ-v1.1.txt${DEFAULT_COLOR}\n\n" &&

if ! spell_ok ${SPELL} ; then
  if ! query  "Do you agree to the terms in the DLJ License?" n; then
    return 1
  fi
else 
  message "${MESSAGE_COLOR}Already agreed to license\n${DEFAULT_COLOR}"
fi

