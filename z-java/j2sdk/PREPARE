if spell_installed j2sdk-bin
then export JAVA_HOME=/usr/lib/j2sdk1.4.1
fi                                                   &&
if ! [ -f $JAVA_HOME/bin/java ] || ! grep -q BOOTSTRAP $SPELL_CONFIG;
then message "Sorry options changed in this version, you must reconfigure this spell" &&
     sedit '1,10D' $SPELL_CONFIG
fi
