  SECURITY_PATCH=1
        ;;
        ia32)
if [[ $NVIDIA_BETA == y ]]; then
         VERSION=304.60
     SOURCE_HASH=sha512:7659d58fa8badb2c5b070998e20c7ce55997aff5eece7ce6130c6d3055aed0954121acb1178e38d07ced211e7998fe2a7c8d32b6b48a03aac533c8d3ef962536
