     SOURCE_HASH=sha512:e9d3d23539d37a1c1369c35bf45c50fe760c883555857c524b34fa8c34083d8499da72e3d9f4bdf34fad825e44ac196976e492b7f50a139a00a42181a5c39812
fi
      SOURCE_URL=http://http.download.nvidia.com/XFree86/Linux-x86/$VERSION/$SOURCE
SOURCE_DIRECTORY=$BUILD_DIRECTORY/NVIDIA-Linux-x86-$VERSION
        ;;
############################################################
# missing ia64 support we don't have an arch spec for it???
############################################################
        *)
         VERSION=${SMGL_COMPAT_ARCHS[0]}
