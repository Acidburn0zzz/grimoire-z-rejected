  SECURITY_PATCH=1
        ;;
        ia32)
if [[ $NVIDIA_BETA == y ]]; then
         VERSION=302.07
     SOURCE_HASH=sha512:f62c8dff9982803609706c110a945fd23406fc6550df3c196132f56fc98e400b8f32ad6f2a1d627a868930ee2b4600533545b76135cc9fa235d6c62daf592024
