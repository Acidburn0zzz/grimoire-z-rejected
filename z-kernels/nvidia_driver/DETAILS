  SECURITY_PATCH=1
        ;;
        ia32)
if [[ $NVIDIA_BETA == y ]]; then
         VERSION=304.51
     SOURCE_HASH=sha512:3258787b4f3d29cd67d6d23a5d0fb13ce0e2260a61d406319d9e8028e0c4f51b364a1eeb1ae98461aabe2cd8716b5d3b3406fb374756160604f9d78942bbb1d4
