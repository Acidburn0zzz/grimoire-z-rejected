        ;;
        ia32)
          SOURCE=NVIDIA-Linux-x86-$VERSION.run
if [[ $NVIDIA_BETA == y ]]; then
     SOURCE_HASH=sha512:e9d3d23539d37a1c1369c35bf45c50fe760c883555857c524b34fa8c34083d8499da72e3d9f4bdf34fad825e44ac196976e492b7f50a139a00a42181a5c39812
