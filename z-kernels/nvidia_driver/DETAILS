  SECURITY_PATCH=1
        ;;
        ia32)
if [[ $NVIDIA_BETA == y ]]; then
         VERSION=340.17
     SOURCE_HASH=sha512:a0e82659497b8d5adcf8f2b39cc13c19b7039f8b885b7b8d0b40a487946c94d66cb954d630b9f334195b07dd58cf24f7b3f530364a9004f8fd44ed05a5af885e
