local  X_DIR  GL_DIR  i                                      &&
X_DIR=$INSTALL_ROOT/usr/include/GL/x                         &&
GL_DIR=$INSTALL_ROOT/usr/include/GL/                         &&
message "${MESSAGE_COLOR}Restoring X headers${SPELL_COLOR}"  &&

for i in gl.h glext.h glx.h glxext.h; do
  mv  -v  $X_DIR/$i  $GL_DIR
done  &&

rm  -rf  $X_DIR
