INSTALLDIR=/usr/share/TeamSpeak
DOCDIR=/usr/share/doc/${SPELL}
SHAREDIR=/usr/share/${SPELL}

cd $SOURCE_DIRECTORY/setup.data/image &&

# edit configuration.
sedit 's:\%installdir\%:\/usr\/share\/ts2_client:' TeamSpeak &&

# create dirs and install.
mkdir -p $DOCDIR $SHAREDIR                           &&
cp -rv manual $DOCDIR/                               &&
cp -rv *.txt  $DOCDIR/                               &&
cp -rv ./*    $SHAREDIR/                             &&
cp -rv $SCRIPT_DIRECTORY/teamspeak /usr/bin          &&
chmod 755 /usr/bin/teamspeak &&

#
# Copy custom-build libjpeg.so, stupid binaries
#
cp -v $SOURCE_DIRECTORY/jpeg-6b/.libs/libjpeg.so \
  $INSTALL_ROOT/usr/share/$SPELL/libjpeg.so.62

# Create Desktop file
cat << EOF > $INSTALL_ROOT/usr/share/applications/$SPELL.desktop
[Desktop Entry]
Name=TeamSpeak
Comment=Internet-based conferencing
Exec=teamspeak
Type=Application
Icon=$INSTALL_ROOT/usr/share/ts2_client/icon.xpm
Categories=Internet
EOF
