local INSTALLDIR=/usr/libexec/$SPELL &&

# create dirs and install.
mkdir -p $INSTALLDIR &&
cp -rv ./*    $INSTALLDIR/ &&
cp -rv $SCRIPT_DIRECTORY/teamspeak3 /usr/bin &&
chmod 755 /usr/bin/teamspeak3 &&

# Create Desktop file
cat << EOF > $INSTALL_ROOT/usr/share/applications/$SPELL.desktop
[Desktop Entry]
Name=TeamSpeak 3
Comment=Internet-based conferencing
Exec=teamspeak3
Type=Application
Icon=$INSTALL_ROOT/usr/libexec/ts3_client/gfx/default/32x32_whisperlists.png
Categories=Internet
EOF
