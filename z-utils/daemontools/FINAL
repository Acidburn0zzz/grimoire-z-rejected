echo  "Installing svscanboot to /etc/inittab..."  &&

if  !  grep  -q  svscan-start  /etc/inittab;  then
  cp  -f  /etc/inittab  /etc/inittab.`date -I`  &&
  sed  -i  -e  '1,/^tty/{; /^tty/i \
tty99:dumb:/usr/bin/svscanboot /service
  }'  /etc/inittab  ||  return  1
  echo  "svscanboot has been added to /etc/inittab. 'kill -1 1' to reload init."
else
  echo  "svscanboot is already in /etc/inittab."
fi
